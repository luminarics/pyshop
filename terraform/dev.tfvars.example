# Development Environment Configuration

project_name = "pyshop"
environment  = "dev"
aws_region   = "us-east-1"

# Networking - Smaller footprint for dev
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]
enable_nat_gateway   = true # Set to false if tasks don't need internet

# Application
app_image = "<account-id>.dkr.ecr.us-east-1.amazonaws.com/pyshop-api:dev"
app_port  = 8000
app_count = 1 # Single instance for dev

# ECS Fargate - Minimal resources for dev
fargate_cpu    = "256"  # 0.25 vCPU
fargate_memory = "512"  # 0.5 GB

# Auto Scaling - Disabled for dev (min = max)
autoscaling_min_capacity = 1
autoscaling_max_capacity = 2

# Database - Minimal for dev
db_name              = "pyshop_dev"
db_username          = "app"
db_instance_class    = "db.t4g.micro"
db_allocated_storage = 20
db_engine_version    = "15.5"
db_multi_az          = false # Single-AZ for cost savings

# Logging - Short retention for dev
log_retention_days = 3

# DNS & SSL - Disabled for dev
enable_ssl          = false
domain_name         = ""
create_route53_zone = false
route53_zone_id     = ""

# Application Configuration
jwt_expire_minutes = 30
